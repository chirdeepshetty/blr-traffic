<html>
<head><title> </title></head>

<body>
	<table id="videos">
		<% @videos.each do |video| %>
			<tr>
				<td><%= link_to video.name, :controller => "offence_report", :action => "view", :id => video.id %></td>
				<td>View Count = <%= get_view_count(video) %></td>
				<td>No. of Offences = <%= no_of_offences(video) %>
			</tr>	
		<% end %>
	</table>
</body>
</html>